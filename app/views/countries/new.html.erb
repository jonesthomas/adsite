<% provide(:title, 'Add Country') %>
<div class="jonestitle"><h1>Add Country</h1> </div>
<div class="container">
<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <%= form_for(@country) do |f| %>
			<%= render 'shared/country_error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Add new country", class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>
</div>
